<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="152dp"
    android:layout_height="152dp"
    android:layout_marginStart="6dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="0dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/main_screen_weather_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/description_weather_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/main_screen_weather_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:textSize="11sp"
            android:letterSpacing="0.04"
            app:layout_constraintBottom_toTopOf="@+id/main_screen_weather_item_icon"
            app:layout_constraintEnd_toEndOf="@+id/main_screen_weather_item_icon"
            app:layout_constraintStart_toStartOf="@+id/main_screen_weather_item_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="23.02 - 12:00" />

        <TextView
            android:id="@+id/main_screen_weather_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="9dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/main_screen_weather_item_icon"
            app:layout_constraintStart_toStartOf="@+id/main_screen_weather_item_icon"
            app:layout_constraintTop_toBottomOf="@+id/main_screen_weather_item_icon"
            tools:text="Windy" />

        <TextView
            android:id="@+id/main_screen_weather_item_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/main_screen_weather_item_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/main_screen_weather_item_icon"
            app:layout_constraintTop_toTopOf="@+id/main_screen_weather_item_icon"
            tools:text="57%" />

        <TextView
            android:id="@+id/main_screen_weather_item_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/main_screen_weather_item_icon"
            app:layout_constraintEnd_toStartOf="@+id/main_screen_weather_item_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_screen_weather_item_icon"
            tools:text="+12" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>